    script.
      var socket = io.connect('!{app.get('env') === 'development' ? 'http://localhost' : 'http://infinite-wave-1213.herokuapp.com'}');
  body
    .header
      .container_16
        a(href="/").left
          img(src="/images/mini-logo.png")
        #breadcrumbs.left
          ul
            -for (var i = 0; i < breadcrumbs.length; i++)
              -crumb = breadcrumbs[i];
              li
                a(href=crumb[1])
                  =crumb[0]
        -if (typeof current_user !== 'undefined')
          #user_status.right
            b="You are logged in as "
              a(href="/users")=current_user.name
              =" ("+current_user.elo_rating+") "
            a(href="/logout")="(Logout)"
    .container_16
      .grid_10.prefix_3
        .message.hidden
    .container_16.body
      block content
