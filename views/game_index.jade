extends layout

block content
  #game_list.grid_10
    table.striped_table.center
      tr
        th="Game Name"
        th="White Player"
        th="Black Player"
        th="Private?"
      -for (var i = 0; i < games.length; i++)
        -var verbose = true;
        -var game = games[i]
        -var white = games[i].white
        -var black = games[i].black
        include game_row
  #new_game.grid_4
    form(name="create_game", action="/games/create", method="post")
      .label="Create a game: "
      .field
        ="Name: "
        input(type="text", name="name")
      .label="Join as:"
      .field
        input(type="radio", name="player", value="w")
        =" White"
      .field
        input(type="radio", name="player", value="b")
        =" Black"
      .field
        input(type="radio", name="player", value="spectator")
        =" Spectator"
      span.field
        select(name="mode")
          option(value="classic") Classic
          option(value="960") 960
          option(value="blitz") Blitz
          option(value="ai") AI
        input(type="submit", value="Create Game", id="create_game")
  a(href="/users")="User List"


